@page "/manage-videos"
@inherits ComponentBase
@using MeTube.Client.ViewModels
@using MeTube.Client.Models
@inject ManageVideosViewModel ViewModel
@inject NavigationManager Navigation

<div class="manage-videos-container">
    <h3>My Videos</h3>

    @if (ViewModel.IsLoading)
    {
        <div class="loading-overlay">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewModel.ErrorMessage
        </div>
    }

    <div class="video-list">
        @foreach (var video in ViewModel.UserVideos)
        {
            <div class="video-card">
                <div class="video-preview">
                    <video controls>
                        <source src="@video.VideoUrl" type="video/mp4">
                    </video>
                </div>

                <div class="video-info">
                    <h5>@video.Title</h5>
                    <p>@video.Description</p>
                    <div class="video-stats">
                        <span>Uploaded: @video.DateUploaded.ToString("d")</span>
                    </div>
                </div>

                <div class="video-actions">
                    <button @onclick="() => ShowEditModal(video)"
                            class="btn btn-primary">
                        Edit
                    </button>
                    <button @onclick="() => ViewModel.DeleteVideoCommand.Execute(video.Id)"
                            class="btn btn-danger">
                        Delete
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.LoadUserVideosCommand.ExecuteAsync(null);
    }

    private void ShowEditModal(Video video)
    {
